{
  "name": "web3modal",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build --ws --if-present",
    "dev": "npm run dev --w=@web3modal/core & npm run dev --w=@web3modal/ui & npm run dev --w=@web3modal/ethereum & npm run dev --w=@web3modal/react",
    "dev:nextjs": "npm run dev --w=nextjs-example",
    "dev:nextjs-standalone": "npm run dev -w=nextjs-standalone-example",
    "dev:cra": "npm run dev --w=cra-example",
    "dev:html": "npm run dev --w=html-example",
    "dev:html-standalone": "npm run dev --w=html-standalone-example",
    "dev:lab": "npm run dev --w=laboratory",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "typecheck": "npm run typecheck --ws --if-present",
    "new-version": "lerna version --no-git-tag-version --exact",
    "pre-publish": "npm run lint; npm run typecheck; npm run prettier; npm run build; npm run new-version",
    "publish:latest": "lerna exec -- npm publish --no-private --access public --tag latest",
    "publish:canary": "lerna exec -- npm publish --no-private --access public --tag canary"
  },
  "workspaces": [
    "chains/ethereum",
    "packages/core",
    "packages/ui",
    "packages/react",
    "packages/html",
    "packages/standalone",
    "examples/nextjs",
    "examples/nextjs-standalone",
    "examples/html",
    "examples/html-standalone",
    "examples/laboratory",
    "examples/create-react-app"
  ],
  "devDependencies": {
    "@types/node": "18.14.2",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "esbuild": "0.17.10",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "lerna": "6.5.1",
    "prettier": "2.8.4",
    "rollup": "3.17.3",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-lit-css": "4.0.1",
    "typescript": "4.9.5"
  }
}
